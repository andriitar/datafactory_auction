									"userProperties": [],
									"typeProperties": {
										"url": "https://eu.api.blizzard.com/data/wow/token/?namespace=dynamic-eu",
										"method": "GET",
										"headers": {
											"Authorization": {
												"value": "@string(concat('Bearer ', variables('access_token')))",
												"type": "Expression"
											}
										},
										"body": "grant_type=client_credentials&client_id=$clientId&client_secret=kahP2k65BVoz77OxQb25wy6BN5OTCHeS"
									}
								},
								{
									"name": "Store TokenPrice",
									"type": "SetVariable",
									"dependsOn": [
										{
											"activity": "Get WoWToken Data",
											"dependencyConditions": [
												"Succeeded"
											]
										}
									],
									"userProperties": [],
									"typeProperties": {
										"variableName": "token_price",
										"value": {
											"value": "@string(activity('Get WoWToken Data').output.price)",
											"type": "Expression"
										}
									}
								},
								{
									"name": "Store TimeStamp",
									"type": "SetVariable",
									"dependsOn": [
										{
											"activity": "Get WoWToken Data",
											"dependencyConditions": [
												"Succeeded"
											]
										}
									],
									"userProperties": [],
									"typeProperties": {
										"variableName": "last_updated_time",
										"value": {
											"value": "@string(activity('Get WoWToken Data').output.last_updated_timestamp)\n",
											"type": "Expression"
