								"type": "Expression"
							},
							"ifFalseActivities": [
								{
									"name": "Set variables IF NOT",
									"type": "SetVariable",
									"dependsOn": [],
									"userProperties": [],
									"typeProperties": {
										"variableName": "access_token",
										"value": {
											"value": "@string(activity('token request').output.token_type)",
											"type": "Expression"
										}
									}
								}
							],
							"ifTrueActivities": [
								{
									"name": "Store AccessToken",
									"type": "SetVariable",
									"dependsOn": [],
									"userProperties": [],
									"typeProperties": {
										"variableName": "access_token",
